---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { fmtKSTDate } from '../../lib/date';

export async function getStaticPaths() {
  const posts = await getCollection('projects');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} | SATL Lab`}>
  <article class="mx-auto max-w-3xl px-4 py-12">
    <a href="/projects" class="text-sm text-neutral-500 hover:text-white transition no-underline">
      ‚Üê Projects
    </a>

    <div class="mt-4 flex items-center gap-3">
      <span class="rounded-full border border-neutral-600 px-2 py-0.5 text-xs text-neutral-400">{post.data.category}</span>
      <span class="text-sm text-neutral-500">{fmtKSTDate(post.data.date)}</span>
    </div>

    <h1 class="mt-3 text-3xl font-bold">{post.data.title}</h1>

    <div class="mt-8 prose prose-invert max-w-none">
      <Content />
    </div>
  </article>
</Layout>