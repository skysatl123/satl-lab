---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
}

const { title = "SATL Lab" } = Astro.props;
---

<!doctype html>
<html lang="ko" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.22/dist/katex.min.css"
    />

    <!--
      Theme bootstrap:
      - Avoids clobbering other classes on <html>
      - Minimizes flash by applying ASAP in <head>
      - Supports explicit localStorage theme, else OS preference fallback
    -->
    <script is:inline>
      (function () {
        function safeGetTheme() {
          try {
            var saved = localStorage.getItem('theme');
            if (saved === 'dark' || saved === 'light') return saved;
          } catch (e) {}
          // Fallback: OS preference (optional; remove if you want always-dark default)
          try {
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches) {
              return 'light';
            }
          } catch (e) {}
          return 'dark';
        }

        function applyTheme(theme) {
          var root = document.documentElement;
          // Keep any existing classes; only toggle theme classes.
          root.classList.toggle('dark', theme === 'dark');
          root.classList.toggle('light', theme === 'light');
          // Optional: expose theme to CSS via data attribute
          root.dataset.theme = theme;
        }

        applyTheme(safeGetTheme());
      })();
    </script>
  </head>

  <body class="flex min-h-screen flex-col font-sans">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <script is:inline>
      (function () {
        function getTheme() {
          try {
            var saved = localStorage.getItem('theme');
            if (saved === 'dark' || saved === 'light') return saved;
          } catch (e) {}
          // Match head bootstrap logic (fallback)
          try {
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches) {
              return 'light';
            }
          } catch (e) {}
          return 'dark';
        }

        function setTheme(theme) {
          var root = document.documentElement;
          root.classList.toggle('dark', theme === 'dark');
          root.classList.toggle('light', theme === 'light');
          root.dataset.theme = theme;

          try { localStorage.setItem('theme', theme); } catch (e) {}

          // Update all toggle buttons (supports multiple instances)
          var buttons = document.querySelectorAll('.theme-toggle');
          buttons.forEach(function (btn) {
            btn.textContent = theme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
            btn.setAttribute('aria-label', theme === 'dark' ? 'Switch to light mode' : 'Switch to dark mode');
          });
        }

        function initThemeToggles() {
          // Set initial button UI
          setTheme(getTheme());

          // Event delegation: works even if buttons are rendered later
          document.addEventListener('click', function (e) {
            var target = e.target;
            if (!target) return;

            // If click is inside an element with .theme-toggle
            var btn = target.closest ? target.closest('.theme-toggle') : null;
            if (!btn) return;

            var next = (getTheme() === 'dark') ? 'light' : 'dark';
            setTheme(next);
          });
        }

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initThemeToggles);
        } else {
          initThemeToggles();
        }
      })();
    </script>
  </body>
</html>