---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

// ✅ 날짜/요일/시간만 (KST 기준), GMT/UTC 같은 문자열 안 나오게 포맷
const fmt = (d: Date) =>
  new Intl.DateTimeFormat("ko-KR", {
    timeZone: "Asia/Seoul",
    year: "numeric",
    month: "2-digit",
    day: "2-digit",
    weekday: "short",
    hour: "2-digit",
    minute: "2-digit",
    hour12: false,
  }).format(d);
---

<Layout title={`${post.data.title} | SATL Lab`}>
  <article class="mx-auto max-w-3xl px-4 py-12">
    <a href="/blog" class="text-sm text-neutral-500 hover:text-white transition no-underline">
      ← Blog
    </a>

    <h1 class="mt-4 text-3xl font-bold">{post.data.title}</h1>
    <p class="mt-2 text-sm text-neutral-500">{fmt(post.data.date)}</p>

    {post.data.tags && (
      <div class="mt-3 flex gap-2">
        {post.data.tags.map((tag: string) => (
          <span class="rounded-full border border-neutral-700 px-2 py-0.5 text-xs text-neutral-400">{tag}</span>
        ))}
      </div>
    )}

    <div class="mt-8 prose prose-invert max-w-none">
      <Content />
    </div>
  </article>
</Layout>