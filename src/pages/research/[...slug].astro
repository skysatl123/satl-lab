---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { fmtKSTDate } from '../../lib/date';

export async function getStaticPaths() {
  const posts = await getCollection('research');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} | SATL Lab`}>
  <article class="mx-auto max-w-3xl px-4 py-12">
    <a href="/research" class="text-sm text-neutral-500 hover:text-white transition no-underline">
      ‚Üê Research
    </a>

    <h1 class="mt-4 text-3xl font-bold">{post.data.title}</h1>
    <p class="mt-2 text-sm text-neutral-500">{fmtKSTDate(post.data.date)}</p>

    <div class="mt-8 prose prose-invert max-w-none">
      <Content />
    </div>
  </article>
</Layout>