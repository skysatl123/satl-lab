---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";
import { fmtKSTDate } from "../../lib/date";

export async function getStaticPaths() {
  const posts = await getCollection("projects", ({ data }) => data.status === "published");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} | SATL Lab`}>
  <article class="mx-auto max-w-3xl px-4 py-12">
    <a href="/projects" class="satl-link text-sm transition">
      ‚Üê Projects
    </a>

    <div class="mt-4 flex items-center gap-3">
      <span class="satl-chip" style="padding: 2px 8px; font-size: 11px;">
        {post.data.category}
      </span>

      <span class="text-sm" style="color: var(--satl-text-dim);">
        {fmtKSTDate(post.data.publishedAt)}
      </span>
    </div>

    <h1 class="mt-3 text-3xl font-bold">{post.data.title}</h1>

    <div class="mt-8 prose prose-invert max-w-none">
      <Content />
    </div>
  </article>
</Layout>