---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('research')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const sections = [
  { title: "Overview", desc: "연구 주제 / 키워드 / 내 역할" },
  { title: "Reading Notes", desc: "논문 요약 (짧게, 꾸준히)" },
  { title: "Experiments", desc: "실험 로그 (결과/조건/이슈)" },
  { title: "Weekly Updates", desc: "주간 회고 (3~6줄)" },
  { title: "Outputs", desc: "포스터/발표/코드 (공개 가능한 것만)" },
];
---

<Layout title="Research | SATL Lab">
  <main class="mx-auto max-w-3xl px-4 py-12">
    <h1 class="text-3xl font-bold">Research</h1>
    <p class="mt-2 text-neutral-400">학부연구생 트랙 — 논문, 실험, 주간 업데이트.</p>

    <div class="mt-6 grid gap-3">
      {sections.map((s) => (
        <div class="rounded border border-neutral-800 bg-neutral-900 px-5 py-3">
          <h3 class="font-semibold text-white">{s.title}</h3>
          <p class="mt-1 text-sm text-neutral-400">{s.desc}</p>
        </div>
      ))}
    </div>

    {posts.length > 0 && (
      <div class="mt-10 space-y-4">
        <h2 class="text-xl font-semibold">Posts</h2>
        {posts.map((post) => (
          <a href={`/research/${post.id}`} class="block rounded border border-neutral-800 bg-neutral-900 px-5 py-4 no-underline transition hover:border-neutral-600">
            <h3 class="text-lg font-semibold text-white">{post.data.title}</h3>
            <p class="mt-1 text-sm text-neutral-500">{post.data.date}</p>
          </a>
        ))}
      </div>
    )}
  </main>
</Layout>